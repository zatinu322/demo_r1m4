	<trigger Name="TriggerDefendIeriDie" active="0">
		<event eventid="GE_OBJECT_DIE" ObjName="Bratva" />
		<script>

			TActivate ("RolikBegin_Bantits03")
			
			TDeactivate("trBelongChange")

